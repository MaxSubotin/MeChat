<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane maxWidth="183.0" prefWidth="180.0" style="-fx-background-color: #2B2E30; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/20.0.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TemporaryChatBoxController">
   <children>
      <VBox maxWidth="183.0" prefHeight="80.0" prefWidth="180.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <TextField fx:id="nameTextField" prefHeight="30.0" prefWidth="160.0" promptText="Name / Number . . ." style="-fx-background-color: #404243; -fx-text-fill: white;">
               <font>
                  <Font name="Damascus Regular" size="12.0" />
               </font>
            </TextField>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="160.0" spacing="15.0">
               <children>
                  <Button fx:id="confirmButton" alignment="CENTER" mnemonicParsing="false" onAction="#confirmButtonOnClick" prefWidth="65.0" style="-fx-background-color: lightgreen;" text="Confirm" textAlignment="CENTER">
                     <font>
                        <Font name="Damascus Regular" size="12.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="cancelButton" alignment="CENTER" mnemonicParsing="false" onAction="#cancelButtonOnClick" prefWidth="65.0" style="-fx-background-color: lightpink;" text="Cancel" textAlignment="CENTER">
                     <font>
                        <Font name="Damascus Regular" size="12.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
