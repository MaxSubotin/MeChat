<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="bubbleFlowPane" alignment="CENTER_LEFT" maxWidth="680.0" prefWidth="680.0" xmlns="http://javafx.com/javafx/20.0.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.mechat.ChatBubbleController">
   <children>
      <Label fx:id="leftTimestampLabel" textFill="WHITE">
         <font>
            <Font name="Damascus Regular" size="10.0" />
         </font>
      </Label>
      <Label fx:id="messageBubbleLabel" maxWidth="500.0" onMouseEntered="#showTimeStampOnBubbleHover" onMouseExited="#hideTimeStampOnBubbleHover" style="-fx-background-radius: 10; -fx-background-color: lightgreen;" text="asdasda" wrapText="true">
         <padding>
            <Insets bottom="3.0" left="10.0" right="10.0" top="3.0" />
         </padding>
         <font>
            <Font name="Damascus Regular" size="14.0" />
         </font>
      </Label>
      <Label fx:id="rightTimestampLabel" textFill="WHITE">
         <font>
            <Font name="Damascus Regular" size="10.0" />
         </font>
      </Label>
   </children>
</HBox>
